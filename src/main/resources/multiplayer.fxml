<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.vfh.pressanykey.supertetris.MultiplayerViewController">
   <children>
      <VBox fx:id="box_singleplayer" prefHeight="200.0" prefWidth="300.0">
         <children>
            <Label fx:id="lbl_creategame" text="Spiel erstellen" />
            <Label fx:id="lbl_gamename" text="Spielname" />
            <TextField fx:id="txt_gamename" />
            <Button fx:id="btn_creategame" mnemonicParsing="false" text="Starten" />
         </children></VBox>
      <VBox fx:id="box_multiplayer" prefHeight="200.0" prefWidth="300.0">
         <children>
            <Label fx:id="lbl_joingame" text="Spiel beitreten" />
         </children></VBox>
   </children>
    <stylesheets>
        <URL value="@multiplayer.css" />
    </stylesheets>
</HBox>
